{
  "appId": "io.github.sphplan",
  "appName": "SPH-Plan",
  "bundledWebRuntime": false,
  "webDir": "dist",
  "server": {
    "cleartext": true
  },
  "plugins": {
    "SplashScreen": {
      "launchShowDuration": 0
    },
    "CapacitorHttp": {
      "enabled": true
    },
    "PushNotifications": {
      "presentationOptions": ["badge"]
    },
    "BackgroundRunner": {
      "label": "io.github.sphplan.pushmessages",
      "src": "src/background.js",
      "event": "updateVplanMessages",
      "repeat": true,
      "interval": 15,
      "autoStart": true
    }
  }
}